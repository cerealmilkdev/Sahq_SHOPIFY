{% style %}
  {% # Loads all font variantions with display: swap %}
  {{ settings.type_heading_font | font_face: font_display: 'swap' }}
  {{ settings.type_heading_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_heading_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_heading_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}

  {{ settings.type_body_font | font_face: font_display: 'swap' }}
  {{ settings.type_body_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_body_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_body_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}

  {{ settings.type_accent_font | font_face: font_display: 'swap' }}
  {{ settings.type_accent_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_accent_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_accent_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}

  :root {
    /* Font families with fallbacks */
    --font-heading--family: {% if settings.type_heading_font.family %}{{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }}{% else %}'Poppins', sans-serif{% endif %};
    --font-heading--style: {{ settings.type_heading_font.style | default: 'normal' }};
    --font-heading--weight: {{ settings.type_heading_font.weight | default: '400' }};
    
    --font-body--family: {% if settings.type_body_font.family %}{{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }}{% else %}'Roboto', sans-serif{% endif %};
    --font-body--style: {{ settings.type_body_font.style | default: 'normal' }};
    --font-body--weight: {{ settings.type_body_font.weight | default: '400' }};
    
    --font-accent--family: {% if settings.type_accent_font.family %}{{ settings.type_accent_font.family }}, {{ settings.type_accent_font.fallback_families }}{% else %}'Poppins', sans-serif{% endif %};
    --font-accent--style: {{ settings.type_accent_font.style | default: 'normal' }};
    --font-accent--weight: {{ settings.type_accent_font.weight | default: '600' }};
    
    /* Layout variables */
    --page-width: {{ settings.max_page_width }};
    --page-margin: {{ settings.min_page_margin }}px;
    --color-background: {{ settings.background_color }};
    --color-foreground: {{ settings.foreground_color }};
    --style-border-radius-inputs: {{ settings.input_corner_radius }}px;
    
    /* Accent colors for buttons and highlights */
    --color-accent: #007bff;
    --color-accent-dark: #0056b3;
  }
{% endstyle %}
