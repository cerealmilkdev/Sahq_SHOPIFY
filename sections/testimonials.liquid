{% comment %}
  Testimonials Section - Display customer testimonials with images, quotes, and author information
  Supports: multiple testimonial blocks, customizable layout, background colors
{% endcomment %}

<section class="testimonials testimonials--{{ section.settings.layout }} testimonials--{{ section.settings.background_color_scheme }}"
         style="--testimonials-padding-top: {{ section.settings.padding_top }}rem; --testimonials-padding-bottom: {{ section.settings.padding_bottom }}rem;"
         {{ section.shopify_attributes }}>
  
  <div class="testimonials__container">
    {% if section.settings.heading != blank %}
      <h2 class="testimonials__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.description != blank %}
      <div class="testimonials__description">{{ section.settings.description }}</div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="testimonials__grid">
        {% for block in section.blocks %}
          <div class="testimonials__item" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              <div class="testimonials__item-image">
                {% render 'image',
                  image: block.settings.image,
                  class: 'testimonials__image',
                  width: 200,
                  height: 200,
                  crop: 'center'
                %}
              </div>
            {% endif %}

            {% if block.settings.quote != blank %}
              <blockquote class="testimonials__item-quote">
                {{ block.settings.quote }}
              </blockquote>
            {% endif %}

            {% if block.settings.author != blank or block.settings.role != blank %}
              <div class="testimonials__item-author">
                {% if block.settings.author != blank %}
                  <cite class="testimonials__item-author-name">{{ block.settings.author }}</cite>
                {% endif %}
                {% if block.settings.role != blank %}
                  <span class="testimonials__item-author-role">{{ block.settings.role }}</span>
                {% endif %}
              </div>
            {% endif %}

            {% if block.settings.rating > 0 %}
              <div class="testimonials__item-rating" aria-label="{{ block.settings.rating }} out of 5 stars">
                {% for i in (1..5) %}
                  <span class="testimonials__star {% if i <= block.settings.rating %}testimonials__star--filled{% endif %}">â˜…</span>
                {% endfor %}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="testimonials__empty">
        <p>{{ 'sections.testimonials.empty' | t }}</p>
      </div>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .testimonials {
    padding-top: var(--testimonials-padding-top);
    padding-bottom: var(--testimonials-padding-bottom);
    width: 100%;
  }

  .testimonials--light {
    background-color: var(--color-background);
    color: var(--color-foreground);
  }

  .testimonials--dark {
    background-color: var(--color-foreground);
    color: var(--color-background);
  }

  .testimonials--accent {
    background-color: var(--color-accent);
    color: white;
  }

  .testimonials__container {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 0 var(--page-margin);
  }

  .testimonials__heading {
    font-family: var(--font-heading--family);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    text-align: center;
    margin-bottom: 1rem;
  }

  .testimonials__description {
    font-size: 1.125rem;
    text-align: center;
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .testimonials__grid {
    display: grid;
    gap: 2rem;
  }

  .testimonials--grid-1 .testimonials__grid {
    grid-template-columns: 1fr;
  }

  .testimonials--grid-2 .testimonials__grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .testimonials--grid-3 .testimonials__grid {
    grid-template-columns: repeat(3, 1fr);
  }

  .testimonials--grid-4 .testimonials__grid {
    grid-template-columns: repeat(4, 1fr);
  }

  .testimonials__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 2rem;
    border-radius: 0.5rem;
    background-color: rgba(255, 255, 255, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .testimonials--light .testimonials__item {
    background-color: rgba(0, 0, 0, 0.05);
  }

  .testimonials--dark .testimonials__item {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .testimonials--accent .testimonials__item {
    background-color: rgba(255, 255, 255, 0.15);
  }

  .testimonials__item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .testimonials__item-image {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 1.5rem;
    flex-shrink: 0;
  }

  .testimonials__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials__item-quote {
    font-size: 1.125rem;
    line-height: 1.6;
    font-style: italic;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .testimonials__item-author {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    margin-bottom: 1rem;
  }

  .testimonials__item-author-name {
    font-weight: 600;
    font-style: normal;
    font-size: 1rem;
  }

  .testimonials__item-author-role {
    font-size: 0.875rem;
    opacity: 0.8;
  }

  .testimonials__item-rating {
    display: flex;
    gap: 0.25rem;
    justify-content: center;
  }

  .testimonials__star {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.3);
    line-height: 1;
  }

  .testimonials--light .testimonials__star {
    color: rgba(0, 0, 0, 0.2);
  }

  .testimonials__star--filled {
    color: #ffc107;
  }

  .testimonials__empty {
    text-align: center;
    padding: 3rem;
    opacity: 0.6;
  }

  @media screen and (max-width: 768px) {
    .testimonials--grid-2 .testimonials__grid,
    .testimonials--grid-3 .testimonials__grid,
    .testimonials--grid-4 .testimonials__grid {
      grid-template-columns: 1fr;
    }

    .testimonials__item {
      padding: 1.5rem;
    }

    .testimonials__heading {
      font-size: 1.75rem;
    }

    .testimonials__description {
      font-size: 1rem;
      margin-bottom: 2rem;
    }
  }
{% endstylesheet %}

