{% comment %}
  This section is used in the list-collections template to render a list of
  collections.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

<div class="collections-page">
  <div class="collections-container">
    <h1 class="collections-title">{{ 'collections.title' | t }}</h1>

    <div
      class="collections {{ section.settings.grid_item_width }}"
      style="--grid-gap: {{ section.settings.grid_gap }}px"
    >
      {% for collection in collections %}
        <a class="collection-card" href="{{ collection.url }}">
          <div class="collection-card__image-wrapper">
            {% if collection.featured_image %}
              {% render 'image',
                class: 'collection-card__image',
                image: collection.featured_image,
                width: 300,
                height: 300,
                crop: 'center'
              %}
            {% else %}
              <div class="collection-card__placeholder">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                  <rect x="3" y="3" width="18" height="18" rx="3" ry="3"/>
                  <circle cx="8.5" cy="8.5" r="1.5"/>
                  <polyline points="21,15 16,10 5,21"/>
                </svg>
              </div>
            {% endif %}
            
            <div class="collection-card__gradient"></div>
          </div>

          <div class="collection-card__content">
            <div class="collection-card__meta">
              {% if collection.products_count > 0 %}
                <span class="collection-card__count">{{ collection.products_count }} {{ 'collections.items' | t | default: 'items' }}</span>
              {% endif %}
            </div>

            <h3 class="collection-card__title">{{ collection.title }}</h3>

            {% if collection.description %}
              <p class="collection-card__description">{{ collection.description | strip_html | truncatewords: 12 }}</p>
            {% endif %}

            <span class="collection-card__cta">
              <span class="collection-card__cta-text">{{ 'collections.view' | t | default: 'View collection' }}</span>
              <span class="collection-card__cta-icon">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14"/>
                  <path d="m12 5 7 7-7 7"/>
                </svg>
              </span>
            </span>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
  .collections-page {
    --card-radius: 20px;
    --card-bg: #ffffff;
    --card-border: rgba(0, 0, 0, 0.06);
    --transition-smooth: cubic-bezier(0.4, 0, 0.2, 1);
    
    padding: clamp(2rem, 4vw, 5rem) 0 clamp(3rem, 6vw, 8rem);
    min-height: 80vh;
    background: #f8f8f8;
    overflow-x: hidden;
  }

  .collections-container {
    max-width: var(--content-width, 1000px);
    margin: 0 auto;
    padding: 0 clamp(1rem, 4vw, 3rem);
  }

  /* Titre responsive */
  .collections-title {
    font-size: clamp(1.75rem, 5vw, 3.5rem);
    font-weight: 700;
    color: var(--color-foreground, #1a1a1a);
    margin: 0 0 clamp(1.5rem, 4vw, 3rem);
    line-height: 1.15;
    letter-spacing: -0.02em;
    text-align: center;
  }

  /* ========================================
     DESKTOP / TV - Layout Bento asymÃ©trique
     ======================================== */
  @media (min-width: 1024px) {
    .collections {
      display: grid;
      grid-template-columns: repeat(12, 1fr);
      grid-auto-rows: minmax(200px, auto);
      gap: var(--grid-gap, 20px);
    }

    .collection-card:nth-child(1) {
      grid-column: span 2;
      grid-row: span 1;

    }

    .collection-card:nth-child(2) {
      grid-column: span 2;
      grid-row: span 1;
    }

    .collection-card:nth-child(3) {
      grid-column: span 2;
      grid-row: span 1;
    }

    .collection-card:nth-child(4) {
      grid-column: span 2;
      grid-row: span 2;
    }

    .collection-card:nth-child(5) {
      grid-column: span 2;
      grid-row: span 1;
    }

    .collection-card:nth-child(6) {
      grid-column: span 2;
      grid-row: span 1;
    }

    /* Items suivants en grille 3 colonnes */
    .collection-card:nth-child(7) {
      grid-column: span 2;
      grid-row: span 1;
    }

  }

  /* ========================================
     TV / Ultra-wide (>1920px)
     ======================================== */
  @media (min-width: 1920px) {
    .collections-container {
      max-width: 1000px;
    }

    .collections-title {
      font-size: 4rem;
      margin-bottom: 4rem;
    }

    .collections {
      gap: 28px;
    }

    .collection-card__title {
      font-size: 1.75rem;
    }

    .collection-card__description {
      font-size: 1rem;
    }

    .collection-card__content {
      padding: 2rem;
    }
  }

  /* ========================================
     LAPTOP (1024px - 1440px)
     ======================================== */
  @media (min-width: 1024px) and (max-width: 1440px) {
    .collections {
      gap: clamp(12px, 1.5vw, 20px);
    }

    .collection-card__content {
      padding: 1.25rem;
    }

    .collection-card__title {
      font-size: 1.15rem;
    }

    .collection-card__description {
      font-size: 0.8rem;
      -webkit-line-clamp: 2;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .collection-card__cta {
      font-size: 0.75rem;
    }
  }

  /* ========================================
     TABLET (768px - 1023px)
     ======================================== */
  @media (min-width: 768px) and (max-width: 1023px) {
    .collections {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--grid-gap, 16px);
    }

    .collection-card__title {
      font-size: 1.1rem;
    }

    .collection-card__description {
      font-size: 0.85rem;
      -webkit-line-clamp: 2;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  }

  /* ========================================
     MOBILE (<768px)
     ======================================== */
  @media (max-width: 767px) {
    .collections-page {
      padding: 1.5rem 0 2.5rem;
    }

    .collections-container {
      padding: 0 1rem;
    }

    .collections-title {
      font-size: 1.5rem;
      margin-bottom: 1.25rem;
      text-align: left;
    }

    .collections {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .collection-card {
      --card-radius: 16px;
    }

    .collection-card__image-wrapper {
      aspect-ratio: 16/10;
    }

    .collection-card__content {
      padding: 1rem;
      gap: 0.35rem;
    }

    .collection-card__title {
      font-size: 1.1rem;
    }

    .collection-card__description {
      font-size: 0.8rem;
      -webkit-line-clamp: 2;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .collection-card__count {
      font-size: 0.65rem;
      padding: 0.25rem 0.5rem;
    }

    .collection-card__cta {
      padding-top: 0.75rem;
      font-size: 0.75rem;
    }
  }

  /* ========================================
     CARD STYLES
     ======================================== */
  .collection-card {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    background: var(--card-bg);
    border-radius: var(--card-radius);
    border: 1px solid var(--card-border);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.4s var(--transition-smooth), 
                box-shadow 0.4s var(--transition-smooth);
  }

  .collection-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.12);
  }

  /* Image */
  .collection-card__image-wrapper {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: linear-gradient(145deg, #eee 0%, #ddd 100%);
  }

  .collection-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s var(--transition-smooth);
  }

  .collection-card:hover .collection-card__image {
    transform: scale(1.04);
  }

  .collection-card__placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    color: rgba(0, 0, 0, 0.15);
    background: linear-gradient(145deg, #f5f5f5 0%, #e8e8e8 100%);
  }

  .collection-card__gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.4) 0%, transparent 60%);
    opacity: 0;
    transition: opacity 0.4s var(--transition-smooth);
    pointer-events: none;
  }

  .collection-card:hover .collection-card__gradient {
    opacity: 1;
  }

  /* Content */
  .collection-card__content {
    position: relative;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    flex: 1;
  }

  .collection-card__meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .collection-card__count {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-foreground, #1a1a1a);
    opacity: 0.45;
    padding: 0.3rem 0.6rem;
    background: rgba(0, 0, 0, 0.04);
    border-radius: 100px;
  }

  .collection-card__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-foreground, #1a1a1a);
    margin: 0;
    line-height: 1.25;
    letter-spacing: -0.01em;
  }

  .collection-card__description {
    font-size: 0.85rem;
    line-height: 1.5;
    color: var(--color-foreground, #1a1a1a);
    opacity: 0.55;
    margin: 0;
    flex: 1;
  }

  /* CTA */
  .collection-card__cta {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    margin-top: auto;
    padding-top: 0.75rem;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-foreground, #1a1a1a);
    opacity: 0.6;
    transition: opacity 0.3s ease, gap 0.3s ease;
  }

  .collection-card:hover .collection-card__cta {
    opacity: 1;
    gap: 0.6rem;
  }

  .collection-card__cta-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s var(--transition-smooth);
  }

  .collection-card:hover .collection-card__cta-icon {
    transform: translateX(3px);
  }

  /* Focus states */
  .collection-card:focus-visible {
    outline: 2px solid var(--color-foreground, #1a1a1a);
    outline-offset: 3px;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .collection-card {
      transition: box-shadow 0.2s ease;
    }

    .collection-card:hover {
      transform: none;
    }

    .collection-card__image,
    .collection-card__cta-icon {
      transition: none;
    }

    .collection-card:hover .collection-card__image {
      transform: none;
    }
  }

  /* Empty State */
  .collections--empty {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--color-foreground, #1a1a1a);
  }

  .collections--empty h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    opacity: 0.7;
  }

  .collections--empty p {
    font-size: 0.9rem;
    line-height: 1.5;
    opacity: 0.45;
  }
{% endstylesheet %}

