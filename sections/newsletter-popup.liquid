{% comment %}
  Newsletter Popup — Shown after X seconds or on exit intent.
  Stores a cookie to suppress re-display for N days.
{% endcomment %}

<div
  class="nl-popup-overlay"
  data-nl-popup
  data-delay="{{ section.settings.delay }}"
  data-cookie-days="{{ section.settings.cookie_days }}"
  aria-hidden="true"
  role="dialog"
  aria-modal="true"
  aria-labelledby="nl-popup-title"
>
  <div class="nl-popup" data-nl-popup-inner>
    <button
      type="button"
      class="nl-popup__close"
      data-nl-popup-close
      aria-label="{{ 'general.close' | t | default: 'Close' }}"
    >
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
        <line x1="18" y1="6" x2="6" y2="18"/>
        <line x1="6" y1="6" x2="18" y2="18"/>
      </svg>
    </button>

    <div class="nl-popup__content" style="background-color: {{ section.settings.bg_color }}">
      {% if section.settings.image %}
        <div class="nl-popup__image">
          {% render 'image', image: section.settings.image, class: 'nl-popup__img', width: 400 %}
        </div>
      {% endif %}

      <div class="nl-popup__body">
        {% if section.settings.title != blank %}
          <h2 class="nl-popup__title" id="nl-popup-title">{{ section.settings.title }}</h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <p class="nl-popup__desc">{{ section.settings.description }}</p>
        {% endif %}

        {% form 'customer', id: 'nl-popup-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="nl-popup__form-group">
            <input
              type="email"
              name="contact[email]"
              class="nl-popup__input"
              placeholder="{{ section.settings.placeholder | default: 'Enter your email' }}"
              required
              aria-label="{{ section.settings.placeholder | default: 'Enter your email' }}"
            >
            <button type="submit" class="nl-popup__btn">
              {{ section.settings.button_text | default: 'Subscribe' }}
            </button>
          </div>
          {% if form.posted_successfully? %}
            <p class="nl-popup__success" role="status">✓ {{ 'sections.newsletter_popup.success' | t | default: 'Thank you for subscribing!' }}</p>
          {% endif %}
          {% if form.errors %}
            <p class="nl-popup__error" role="alert">{{ form.errors | default_errors }}</p>
          {% endif %}
        {% endform %}

        <button type="button" class="nl-popup__dismiss" data-nl-popup-close>
          {{ 'sections.newsletter_popup.no_thanks' | t | default: 'No thanks' }}
        </button>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .nl-popup-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.55);
    z-index: 300;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.35s ease, visibility 0.35s ease;
  }

  .nl-popup-overlay.is-visible {
    opacity: 1;
    visibility: visible;
  }

  .nl-popup {
    position: relative;
    max-width: 480px;
    width: 100%;
    transform: scale(0.95) translateY(12px);
    transition: transform 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .nl-popup-overlay.is-visible .nl-popup {
    transform: scale(1) translateY(0);
  }

  .nl-popup__content {
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.25);
  }

  .nl-popup__image {
    width: 100%;
    max-height: 200px;
    overflow: hidden;
  }

  .nl-popup__img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
  }

  .nl-popup__body {
    padding: 2rem;
    text-align: center;
  }

  .nl-popup__close {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border: none;
    background: rgba(0, 0, 0, 0.15);
    color: white;
    border-radius: 50%;
    cursor: pointer;
    transition: background 0.2s ease;
  }

  .nl-popup__close:hover {
    background: rgba(0, 0, 0, 0.3);
  }

  .nl-popup__title {
    font-size: 1.625rem;
    font-weight: 800;
    color: var(--color-foreground);
    margin: 0 0 0.75rem;
    line-height: 1.2;
  }

  .nl-popup__desc {
    font-size: 0.95rem;
    color: var(--color-foreground);
    opacity: 0.7;
    margin: 0 0 1.5rem;
    line-height: 1.6;
  }

  .nl-popup__form-group {
    display: flex;
    gap: 0.5rem;
  }

  .nl-popup__input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 2px solid rgba(0, 0, 0, 0.12);
    border-radius: 8px;
    font-size: 0.95rem;
    font-family: inherit;
    background: white;
    transition: border-color 0.2s ease;
    min-width: 0;
  }

  .nl-popup__input:focus {
    outline: none;
    border-color: var(--color-accent, #667eea);
  }

  .nl-popup__btn {
    padding: 0.75rem 1.25rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 700;
    font-family: inherit;
    cursor: pointer;
    white-space: nowrap;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  }

  .nl-popup__btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
  }

  .nl-popup__success {
    color: #28a745;
    font-weight: 600;
    font-size: 0.9rem;
    margin: 0.75rem 0 0;
  }

  .nl-popup__error {
    color: #dc3545;
    font-size: 0.85rem;
    margin: 0.5rem 0 0;
  }

  .nl-popup__dismiss {
    display: block;
    width: 100%;
    margin-top: 1rem;
    background: none;
    border: none;
    color: var(--color-foreground);
    opacity: 0.5;
    font-size: 0.85rem;
    cursor: pointer;
    font-family: inherit;
    text-decoration: underline;
    transition: opacity 0.2s ease;
  }

  .nl-popup__dismiss:hover {
    opacity: 0.8;
  }

  @media (max-width: 480px) {
    .nl-popup__form-group {
      flex-direction: column;
    }

    .nl-popup__body {
      padding: 1.5rem;
    }
  }
{% endstylesheet %}

<script>
  (function() {
    var COOKIE_NAME = 'sahq_nl_popup';

    function getCookie(name) {
      var cookies = document.cookie.split('; ');
      for (var i = 0; i < cookies.length; i++) {
        var parts = cookies[i].split('=');
        if (parts[0] === name) return parts[1];
      }
      return null;
    }

    function setCookie(name, value, days) {
      var expires = new Date(Date.now() + days * 864e5).toUTCString();
      document.cookie = name + '=' + value + '; expires=' + expires + '; path=/; SameSite=Lax';
    }

    var overlay = document.querySelector('[data-nl-popup]');
    if (!overlay) return;

    if (getCookie(COOKIE_NAME)) return;

    var delay = parseInt(overlay.dataset.delay) * 1000 || 5000;
    var cookieDays = parseInt(overlay.dataset.cookieDays) || 7;

    function showPopup() {
      overlay.classList.add('is-visible');
      overlay.removeAttribute('aria-hidden');
      var firstInput = overlay.querySelector('input[type="email"]');
      if (firstInput) firstInput.focus();
    }

    function hidePopup() {
      overlay.classList.remove('is-visible');
      overlay.setAttribute('aria-hidden', 'true');
      setCookie(COOKIE_NAME, '1', cookieDays);
    }

    // Show after delay
    var timer = setTimeout(showPopup, delay);

    // Exit intent (desktop only)
    if (window.innerWidth > 768) {
      document.addEventListener('mouseleave', function handler(e) {
        if (e.clientY <= 0) {
          clearTimeout(timer);
          showPopup();
          document.removeEventListener('mouseleave', handler);
        }
      });
    }

    // Close buttons
    overlay.querySelectorAll('[data-nl-popup-close]').forEach(function(btn) {
      btn.addEventListener('click', hidePopup);
    });

    // Close on overlay click
    overlay.addEventListener('click', function(e) {
      if (e.target === overlay) hidePopup();
    });

    // Close on Escape
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && overlay.classList.contains('is-visible')) hidePopup();
    });

    // Auto-close after successful form submission
    var form = overlay.querySelector('form');
    if (form && overlay.querySelector('.nl-popup__success')) {
      setCookie(COOKIE_NAME, '1', cookieDays);
    }
  })();
</script>

{% schema %}
{
  "name": "t:sections.newsletter_popup.name",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.newsletter_popup.settings.title.label",
      "default": "Get 10% off your first order"
    },
    {
      "type": "text",
      "id": "description",
      "label": "t:sections.newsletter_popup.settings.description.label",
      "default": "Subscribe to our newsletter and be the first to know about new products and exclusive offers."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "t:sections.newsletter_popup.settings.placeholder.label",
      "default": "Enter your email address"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:sections.newsletter_popup.settings.button_text.label",
      "default": "Get my discount"
    },
    {
      "type": "range",
      "id": "delay",
      "min": 2,
      "max": 30,
      "step": 1,
      "unit": "s",
      "label": "t:sections.newsletter_popup.settings.delay.label",
      "default": 5
    },
    {
      "type": "range",
      "id": "cookie_days",
      "min": 1,
      "max": 30,
      "step": 1,
      "label": "t:sections.newsletter_popup.settings.cookie_days.label",
      "default": 7
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "t:sections.newsletter_popup.settings.bg_color.label",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "t:sections.newsletter_popup.presets.name"
    }
  ]
}
{% endschema %}
