{% comment %}
  USP Bar ‚Äî Configurable icons + text for key selling points.
  Place under header or above footer.
{% endcomment %}

{% if section.blocks.size > 0 %}
  <div class="usp-bar full-width" style="
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  ">
    <div class="usp-bar__container">
      <ul class="usp-bar__list" role="list">
        {% for block in section.blocks %}
          <li class="usp-bar__item" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <span class="usp-bar__icon" aria-hidden="true">{{ block.settings.icon }}</span>
            {% endif %}
            <div class="usp-bar__text-group">
              {% if block.settings.text != blank %}
                <span class="usp-bar__text">{{ block.settings.text }}</span>
              {% endif %}
              {% if block.settings.subtext != blank %}
                <span class="usp-bar__subtext">{{ block.settings.subtext }}</span>
              {% endif %}
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}

{% stylesheet %}
  .usp-bar {
    border-top: 1px solid rgba(0, 0, 0, 0.06);
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  .usp-bar__container {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 0 var(--page-margin);
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .usp-bar__container::-webkit-scrollbar {
    display: none;
  }

  .usp-bar__list {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
    min-width: max-content;
  }

  .usp-bar__item {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    flex-shrink: 0;
  }

  .usp-bar__icon {
    font-size: 1.375rem;
    line-height: 1;
    flex-shrink: 0;
  }

  .usp-bar__text-group {
    display: flex;
    flex-direction: column;
  }

  .usp-bar__text {
    font-size: 0.875rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .usp-bar__subtext {
    font-size: 0.75rem;
    opacity: 0.65;
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .usp-bar__list {
      justify-content: flex-start;
      gap: 1.5rem;
    }
  }
{% endstylesheet %}

